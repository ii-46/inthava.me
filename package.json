{
  "name": "inthava.me-api-v1",
  "version": "1.0.0",
  "description": "Backend for inthava.me",
  "main": "index.js",
  "scripts": {
    "dev": "nodemon src/index.ts",
    "prisma-seed": "ts-node prisma/seed.ts",
    "prisma-push": "prisma db push",
    "prisma-deploy": "prisma migrate deploy",
    "prisma-studio": "prisma studio",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/index.js",
    "tailwind-dev": "live-server ./public",
    "tailwind-c": "npx tailwindcss -i ./public/css/input.css -o ./public/css/man.css --watch",
    "tailwind-prod": "npx tailwindcss -i ./public/css/input.css -o ./src/css/main.css --minify",
    "cssnano": "npx postcss ./src/css/index.css > ./src/css/index.min.css"
  },
  "author": "Inthava XAIYALOUN",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^5.1.0",
    "body-parser": "^1.20.2",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "ejs": "^3.1.9",
    "express": "^4.18.2",
    "express-session": "^1.17.3",
    "express-validator": "^7.0.1",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "serve-favicon": "^2.5.0",
    "slugify": "^1.6.6"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.0.2",
    "@prisma/client": "^5.1.1",
    "@types/bcrypt": "^5.0.0",
    "@types/cookie-parser": "^1.4.4",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.21",
    "@types/express-session": "^1.18.0",
    "@types/morgan": "^1.9.5",
    "@types/multer": "^1.4.7",
    "@types/node": "^20.5.0",
    "@types/serve-favicon": "^2.5.7",
    "nodemon": "^3.1.0",
    "prettier": "^3.2.5",
    "prisma": "^5.1.1",
    "tailwindcss": "^3.4.3",
    "ts-node": "^10.9.1",
    "type-fest": "^4.3.1",
    "typescript": "^5.1.6"
  },
  "nodemonConfig": {
    "ext": ".ts, .css, .ejs"
  }
}
